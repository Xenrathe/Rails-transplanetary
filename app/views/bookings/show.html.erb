<%= turbo_frame_tag id="booking-show" do %>
  <div class="booking booking-show p-3 ms-3">
    <h2>BOOKING ID#<%= @booking.id %></h2>
    <h4>DEPARTURE: <%= @booking.flight.departure_spaceport.full_name %> (<%= @booking.flight.departure_spaceport.code %>) at <%= @booking.flight.takeoff.strftime("%H:%M, %m/%d/%Y") %> </h3>
    <h4>ARRIVAL: <%= @booking.flight.arrival_spaceport.full_name %> (<%= @booking.flight.arrival_spaceport.code %>) at <%= (@booking.flight.takeoff + @booking.flight.duration.hours).strftime("%H:%M, %m/%d/%Y") %></h2>
    
    <hr class="opacity-50 w-25">
    <div class="passengers mt-4">
    <% @booking.passengers.each_with_index do |passenger, index| %>
      <div class="sub-title fw-bold">Passenger #<%= index + 1 %>:</div>
      <div class="detail">Name: <%= passenger.name %></div>
      <div class="detail">Email: <%= passenger.email %></div><br>
    <% end %>
    </div>
  </div>
<% end %>