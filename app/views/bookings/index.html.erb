<div class="bookings bookings-index">
  <h2>Find Booking</h2>

  <div class="search-form container-fluid mt-2 shadow p-3">
    <%= form_with url: bookings_path, method: :get do |f| %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-item">
            <%= f.label :booking_id, "Booking ID:", class: "fw-bold" %>
            <%= f.text_field :booking_id, class: 'form-control' %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-item">
            <%= f.label :passenger_email, "Passenger Email:", class: "fw-bold" %>
            <%= f.text_field :passenger_email, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
          <div class="form-item d-flex align-items-end h-100">
            <%= f.submit "FIND", class: "btn btn-outline-secondary w-100" %><br><br>
          </div>
        </div>
        <div class="col-md-2">
        </div>
      </div>
    <% end %>
  </div>

  <% if flash[:alert] %>
  <h3 class="alert alert-danger">
    <%= flash[:alert] %>
  </h3>
  <% end %>
</div>